<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
    </head>

    <body>
        <%- include('../includes/nav.ejs') %>

            <main>
                <% if(eMessage) { %>
                    <div class="user-message user-message--error">
                        <%= eMessage %>
                    </div>
                    <% } %>
                        <form class="login-form" action="/login" method="POST">
                            <div class="form-control">
                                <label for="email">E-mail</label>
                                <input class="<%= validationErrors.find(e => e.path === 'email') ? 'invalid' : '' %>"
                                    type="email" name="email" id="email" value="<%= oldInput.email %>">
                            </div>
                            <div class="form-control">
                                <label for="password">Password</label>
                                <input class="<%= validationErrors.find(e => e.path === 'password') ? 'invalid' : '' %>"
                                    type="password" name="password" id="password">
                            </div>
                            <input type="text" hidden name="_csrf" value="<%= csrfToken %>">
                            <button class="btn" type="submit"> Login </button>
                        </form>
                        <div class="centered">
                            <a href="/reset">Reset Password</a>
                        </div>
            </main>
            <%- include('../includes/end.ejs') %>